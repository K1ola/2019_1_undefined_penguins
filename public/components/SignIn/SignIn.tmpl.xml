<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="header">
        <div class="header__home">
            <img src="/images/home.svg" class="header__home-button js-header__home-button"/>
        </div>
        <div class="header__logo">
            <h1 class="header__title">Penguins Wars</h1>
        </div>
    </div>
    <section data-section-name="main" class="signin-content">
        <h3 class="signin__header">Вход</h3>
        <form class="signin-form">
            <input name="email" type="email" placeholder="Email" class="signin-form__input" /><br/>
            <input name="password" type="password" placeholder="Password" class="signin-form__input input-last" /><br/>
            <input name="submit" type="submit" class="signin-form__submit" value="ВОЙТИ"/><br/>
        </form>
    </section>
    <div class="signin__no-account">
        <span class="signin__ask-for-account">Нет аккаунта?</span><a class="signin__link" href="/signUp">Зарегистрируйтесь!</a>
    </div>
</fest:template>