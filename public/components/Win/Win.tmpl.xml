<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="header">
        <div class="header__home">
            <img src="/images/home.svg" class="js-header__home-button"/>
        </div>
        <div class="header__logo">
            <h1 class="header__title">Penguins Wars</h1>
        </div>
    </div>
    <section class="win-content">
        <p class="win__header">Поздравляем, <fest:value>data.login</fest:value>!</p>
        <form class="win-form" enctype="multipart/form-data">
            <div class="win-form__inline">
                <img class="win-form__image" src="../../images/win.png"/>
                <div class="win-form__data">
                    <div class="win-form__item">
                        <p>Вы побили свой рекорд!</p>
                    </div>
                    <div class="win-form__item">
                        <p>Ваш результат: <fest:value>data.score</fest:value></p>
                    </div>
                </div>
            </div>
        </form>
    </section>    
</fest:template>